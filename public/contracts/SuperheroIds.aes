contract SuperheroIds =
  record state =
    { ids : map(address, string) }

  entrypoint init() =
    { ids = {} }

  stateful entrypoint set_id(id : string) =
    put(state{ ids[Call.caller] = id })

  entrypoint get_id() : option(string) =
    Map.lookup(Call.caller, state.ids)

  entrypoint has_id() : bool =
    Map.member(Call.caller, state.ids)
