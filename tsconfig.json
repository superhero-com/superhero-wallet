{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "paths": {
      // "@/*": ["src/*"] // TODO - Uncomment when short paths will be enabled again
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "**/*.svg",
  ],
  "files": [
    "window.d.ts",
    "shims.d.ts",
  ]
}
